<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimaryDark">@color/preto</item>
        <item name="colorAccent">@color/card_color</item>
    </style>

    <style name="Theme.AppCompat.Light.NoActionBar.FullScreen" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="FontSwitch" parent="Widget.AppCompat.CompoundButton.Switch">
        <item name="android:textSize">30dp</item>
        <item name="android:textColor">@color/card_color</item>
        <item name="android:fontFamily">@font/hatten</item>
        <item name="fontFamily">@font/hatten</item>
    </style>


</resources>